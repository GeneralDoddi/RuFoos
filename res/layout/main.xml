<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Quick Match"
            android:id="@+id/quickMatch" android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Challenge"
            android:id="@+id/challenge" android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Matches"
            android:id="@+id/matches" android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Teams"
            android:id="@+id/teams" android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Competitions"
            android:id="@+id/competitions" android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/settings" android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"/>
</LinearLayout>